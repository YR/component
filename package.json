{
  "name": "@yr/component",
  "description": "A factory utility for creating React.js components",
  "version": "1.0.4",
  "author": "Alexander Pope <alexander.pope@nrk.no>",
  "dependencies": {
    "@yr/is-equal": "1.0.x",
    "debug": "2.2.x",
    "object-assign": "4.0.x",
    "react": "0.14.x"
  },
  "devDependencies": {
    "buddy": "*",
    "expect.js": "*",
    "mocha": "*",
    "react-addons-test-utils": "0.14.x",
    "react-dom": "0.14.x",
    "transfigure-babel": "*"
  },
  "main": "index.js",
  "repository": "https://github.com/YR/component.git",
  "license": "MIT",
  "scripts": {
    "prepublish": "buddy build",
    "test": "NODE_ENV=test mocha test/lib-test.js --reporter spec"
  },
  "engines": {
    "node": ">=4"
  },
  "build": {
    "targets": [
      {
        "input": "src/index.js",
        "output": "test/lib.js",
        "boilerplate": true,
        "bootstrap": true
      },
      {
        "input": "src",
        "output": ".",
        "modular": false
      }
    ]
  }
}
